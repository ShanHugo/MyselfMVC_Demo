@{
    ViewData["Title"] = "證照";
}

<style>
    body {
        background: #111418;
        color: #e0e0e0;
        font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
        line-height: 1.8;
    }

    .gradient-text-purple-yellow {
        background: linear-gradient(90deg, #7e5bef, #ffe066);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
        display: inline-block;
        width: 100%;
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 2rem;
    }

    .cert-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .cert-item {
        width: 45%;
        max-width: 480px;
        text-align: center;
    }

        .cert-item img {
            width: 100%;
            aspect-ratio: 4 / 3;
            object-fit: cover;
            border-radius: 0.7rem;
            box-shadow: 0 2px 12px #0004;
            background: #222;
            margin-bottom: 0.8rem;
            transition: transform 0.3s ease-in-out;
        }

            .cert-item img:hover {
                transform: scale(1.05);
            }

        .cert-item a {
            font-size: 1.05rem;
            color: #ffe066;
            text-decoration: underline;
            transition: color 0.2s ease-in-out;
        }

            .cert-item a:hover {
                color: #ff3cac;
                text-decoration: none;
            }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <h1 class="gradient-text-purple-yellow">證照</h1>
            <div class="cert-grid">
                <div class="cert-item">
                    <img src="~/images/projects/SC-900.jpg" alt="SC-900" />
                    <p>
                        <a href="https://learn.microsoft.com/api/credentials/share/zh-tw/75384506/3FA57B8A9CEF45AD?sharingId=F4FCF09D1BC4C8D8" target="_blank">
                            SC-900：Microsoft 安全性、合規性與身分識別基礎
                        </a>
                    </p>
                </div>
                <div class="cert-item">
                    <img src="~/images/projects/DP-900.jpg" alt="DP-900" />
                    <p>
                        <a href="https://learn.microsoft.com/api/credentials/share/zh-tw/75384506/8B9EF7E5DDB313EF?sharingId=F4FCF09D1BC4C8D8" target="_blank">
                            DP-900：Microsoft 數據平台基礎
                        </a>
                    </p>
                </div>
                <div class="cert-item">
                    <img src="~/images/projects/Hahow.png" alt="Hahow" />
                    <p>
                        <a href="https://hahow.in/certificates/67fc8ea1c44233c3f0e4a923" target="_blank">
                            Hahow：資料結構與演算法課程證書
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
