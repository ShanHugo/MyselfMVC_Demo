@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: #111418; /* 統一背景色 */
        color: #e0e0e0;
        font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
    }

    .hero-section {
        background: url('/images/StreetArt.jpg') center/cover no-repeat;
        background-blend-mode: multiply;
        background-color: rgba(17, 20, 24, 0.85); /* 深灰黑混合背景 */
        border-radius: 1rem;
        padding: 3rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        text-align: center;
    }

    .hiphop-avatar-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #ff3cac;
        box-shadow: 0 0 12px #ff3cac55;
        margin-bottom: 1rem;
    }

    .hiphop-title {
        color: #ffb6ff; /* 與自傳頁 h3 樣式一致 */
        text-shadow: 1px 1px 6px #000;
        letter-spacing: 1px;
    }

    .hiphop-skill {
        color: #ffe066; /* 與自傳頁 strong 樣式一致 */
        font-style: italic;
        font-weight: bold;
    }

    .hiphop-btn {
        background: linear-gradient(90deg, #ff3cac 0%, #ffe066 100%);
        color: #232526;
        border: none;
        font-weight: bold;
        margin: 0 0.5rem;
        transition: transform 0.1s, box-shadow 0.1s;
    }

        .hiphop-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px #ff3cac55;
        }

    ::-webkit-scrollbar {
        width: 8px;
        background: #1a1a1a;
    }

    ::-webkit-scrollbar-thumb {
        background: linear-gradient(180deg, #ff3cac, #b388ff);
        border-radius: 4px;
    }
</style>


<div class="container py-5">
    <div class="hero-section">
        <img src="~/images/Myself.jpg" class="hiphop-avatar-img" alt="個人照片" />
        <h1 class="display-5 fw-bold hiphop-title">您好，我是楊善宇</h1>
        <p class="lead mt-3">
            一名熟悉 <span class="hiphop-skill">.NET</span>、<span class="hiphop-skill">SQL</span>、
            <span class="hiphop-skill">Unity</span> 與 <span class="hiphop-skill">基礎AI</span> 的申請生
        </p>
        <div class="mt-3">
            <a href="/Home/PersonalStatement" class="btn hiphop-btn btn-lg">查看我的自傳</a>
            <a href="/Project/Index" class="btn hiphop-btn btn-lg">查看我的作品</a>
        </div>
    </div>
</div>


